{% extends 'medicament/index.html.twig' %}
     {% block stylesheets %}
        <link rel="stylesheet" href="/assets/css/docteurs.css">
        {% endblock %}
{% block body %}

{% block contenu %}
    
{# Tester si un variable medecin existe #}
{% if patient is defined %}
<h1 class="w-100 text-center">Modification Medicament</h1>
{% else %}
<h2 class="w-100 text-end">Ajout Medicament</h2>
<hr>
{% endif %}

<div class="d-flex w-100 medicament rounded-2 " style="height: 80vh;">

    <div class="images rounded-2 ">
        <img src="" alt=""  id="image">
    </div>
    

    <div class="  bg-white p-3 rounded-2 shadow-lg formMedi w-100 ">
        {{ form_start(form,{ 'class': 'row' }) }}
        <div class="  w-50 form ">
            <div class="form-group">
                <label for="">Nom</label>
                {{ form_widget(form.NOM) }}
                <div class="form-error">
                {{ form_errors(form.NOM) }}
                </div>
            </div>
            <div class="form-group">
                <label for="">Date d'expiration</label>

                {{ form_widget(form.DATE_EXP) }}
                {{ form_errors(form.DATE_EXP) }}
            </div>
            <div class="form-group">
                <label for="">Date de fabrication</label>
                {{ form_widget(form.DATE_FAB) }}
                {{ form_errors(form.DATE_FAB) }}
            </div>
            <div class="form-group">
                <label for="">Dosage </label>
                {{ form_widget(form.Dosage) }}
                {{ form_errors(form.Dosage) }}
            </div>
        </div>

        <div class=" w-50 form " style="height: 100%;">
            <div class="form-group">
                <label for="">Prix (Ariary)</label>
                {{ form_widget(form.PRIX) }}
                {{ form_errors(form.PRIX) }}
            </div>
            <div class="form-group">
                <label for="">Quantité</label>
                {{ form_widget(form.QT) }}
                {{ form_errors(form.QT) }}
            </div>
            <div class="form-group">
                <label for="">Image</label>
                {{ form_widget(form.PHOTOS) }}
                {{ form_errors(form.PHOTOS) }}
            </div>
            <div class="form-group">
                <label for="">Forme du Médicament</label>
                {{ form_widget(form.ID_FORME) }}
                {{ form_errors(form.ID_FORME) }}
            </div>
            <div class="form-group">
                <label for="">Ingrédient</label>
                {{ form_widget(form.INGREDIENT) }}
                {{ form_errors(form.INGREDIENT) }}
            </div>
            <div class="mt-3 d-flex justify-content-center ">
            {{ form_row(form.submit, { 'label': 'Enregistrer'}) }}
            </div>
        </div>
        
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
{% endblock %}
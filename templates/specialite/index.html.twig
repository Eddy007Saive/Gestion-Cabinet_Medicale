{% extends 'base.html.twig' %}

{% block title %}Specialite index{% endblock %}

{% block body %}
    <h1>Specialite index</h1>
    <a href="{{ path('app_specialite_new') }}" class="btn btn-success mb-4 ">Nouveau</a>


    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>SPECIALITE</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr class="text-center">
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.SPECIALITE }}</td>
                <td class="d-flex justify-content-center gap-3">
                    <a href="{{ path('app_specialite_delete', {'id': specialite.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger">Supprimer</a>
                    <a href="{{ path('app_specialite_edit', {'id': specialite.id}) }}"  class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
